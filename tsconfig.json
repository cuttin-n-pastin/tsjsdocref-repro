{
  "include": ["*.js"],
  "compilerOptions": {
    "types": [],
    "paths": {
      "*": ["./*.js"]
    },
    "moduleDetection": "force",

    "target": "es2021",
    "module": "commonjs",
    "lib": ["ES2022"],
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true                       ,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
